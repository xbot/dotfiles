<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Donie Leigh's PHP CodeSniffer Standard">
    <description>Extended from zend standard.</description>
    <rule ref="Zend">
        <!-- <exclude name="PEAR.ControlStructures.MultiLineCondition"/> -->
        <!-- <exclude name="PEAR.Functions.FunctionCallSignature"/> -->
        <exclude name="Generic.PHP.DisallowShortOpenTag"/>
        <exclude name="PEAR.WhiteSpace.ScopeClosingBrace"/>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
