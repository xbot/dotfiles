#-----------------------------【多媒體】-------------------------------------# {{{
# 调节音量
# "amixer set Master 5%+"
"xosd_volume.sh incr"
    Control+Shift+ Up
# "amixer set Master 5%-"
"xosd_volume.sh decr"
    Control+Shift+ Down
# "amixer set Master 5%+"
"xosd_volume.sh incr"
    XF86AudioRaiseVolume
# "amixer set Master 5%-"
"xosd_volume.sh decr"
    XF86AudioLowerVolume
# "amixer set Master toggle"
"xosd_volume.sh mute"
    XF86AudioMute
"amixer set Capture toggle"
    m:0x0 + c:198
    NoSymbol 

"xosd_brightness.sh show"
    XF86MonBrightnessUp
"xosd_brightness.sh show"
    XF86MonBrightnessDown

"mpc toggle"
    XF86AudioPlay
# }}}

