" == Settings ==
:let g:hintsio="io"
":let g:hintlabeling="a"
":let g:hintchars="hjkl"
:hi Hint font-family: monospace; font-size: 16px; font-weight: bold; color: white; background-color: black; border-color: ButtonShadow; border-width: 1px; border-style: solid; padding: 1px 1px 1px 1px;
:let mapleader=","

" == Auto commands ==
" Escape in gmail and google reader
autocmd LocationChange .* js modes.passAllKeys = /.*(mail\.google\.com|www\.google\.com\/reader|web\.qq\.com).*/.test(buffer.URL)
autocmd VimperatorEnter .* emenu GBookmarks.Refresh

""" == javascript ==
js<<EOF
// Wiki Selected Text
wiki_selected_text = function () {
    str = buffer.getCurrentWord()
    liberator.execute('tabopen wikipedia ' + str);
}
EOF
 
" Mappings
" Application Mappings
"map <S-F2> :js toggle_bar() <CR>
"map <silent> <F2> :js toggle_menu() <CR>
map <silent> <F2> :set gui=invmenu<CR>
map <C-S-F2> :set gui=invnavigation<CR>
map <leader>du :tabdu<CR>
map <leader>rcop :!gvim ~/.vimperatorrc<CR>
map <leader>rcso :so ~/.vimperatorrc<CR>

" Plugin Mappings
map <C-w> :js wiki_selected_text() <CR>
map <leader>gba :emenu GBookmarks.Add Bookmark<CR>
map <leader>gbo :emenu GBookmarks.
map <leader>qa :xa<CR>
map <leader>tw :tw
map <leader>twit :tw 
map <leader>twls :tw<CR>
map <leader>twmt :tw!@<CR>

" URL Mappings
map <leader>blog :topen http://sinolog.it<CR>
map <leader>git :topen http://github.com/xbot<CR>
map <leader>wiki :topen http://localhost/wiki<CR>
map <leader>dict :topen http://dict.youdao.com/<CR>
map <leader>db :topen http://douban.com<CR>
map <leader>yk :topen http://youku.com<CR>
